<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root_dificultad" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DificultatPescaminesController">
   <children>
      <AnchorPane>
         <children>
            <Label fx:id="capçalera" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="139.0" prefWidth="493.0" text="Tria la dificultad" textAlignment="CENTER">
               <font>
                  <Font name="Bernard MT Condensed" size="39.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
				<HBox fx:id="botons" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="130.0" prefWidth="490.0">
					<padding>
						<Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
					</padding>
         <children>
						<Button fx:id="dificultad_f" mnemonicParsing="false" onAction="#dificultad" prefHeight="50.0" prefWidth="80.0" text="Fàcil">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
						</Button>
            <Button fx:id="dificultad_n" mnemonicParsing="false" onAction="#dificultad" prefHeight="50.0" prefWidth="80.0" text="Normal">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="dificultad_d" mnemonicParsing="false" onAction="#dificultad" prefHeight="50.0" prefWidth="80.0" text="Difícil">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
				</HBox>
      <HBox alignment="TOP_CENTER" prefHeight="144.0" prefWidth="493.0">
         <children>
            <Button fx:id="carregar" contentDisplay="CENTER" mnemonicParsing="false" onAction="#carregarPartida" prefHeight="50.0" prefWidth="80.0" text="Carregar">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="boto_ranquing" mnemonicParsing="false" onAction="#ranquing" prefHeight="50.0" prefWidth="80.0" text="Rànquing">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
