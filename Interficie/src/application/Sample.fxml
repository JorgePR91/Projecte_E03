<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <children>
      <BorderPane fx:id="root" prefHeight="600.0" prefWidth="600.0">
         <top>
            <HBox alignment="TOP_CENTER" prefHeight="151.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="reinici" mnemonicParsing="false" onAction="#reiniciar" prefHeight="81.0" prefWidth="86.0" text="Reiniciar">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Label fx:id="cixaTemps" alignment="CENTER" prefHeight="82.0" prefWidth="207.0" style="-fx-border-color: red;" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="compAntimines" alignment="CENTER" prefHeight="79.0" prefWidth="96.0" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
            </HBox>
         </top>
         <right>
            <AnchorPane BorderPane.alignment="CENTER" />
         </right>
         <center>
            <GridPane fx:id="taulerGrid" accessibleRole="BUTTON" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="200.0" minWidth="200.0" prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER">
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
            </GridPane>
         </center>
         <left>
            <AnchorPane BorderPane.alignment="CENTER" />
         </left>
         <bottom>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" text="Tornar" />
                  <Button fx:id="abandonar" mnemonicParsing="false" text="Abandonar" />
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</HBox>
