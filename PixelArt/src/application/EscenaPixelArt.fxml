   <center>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" scaleShape="false">
         <children>
            <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <center>
                  <GridPane fx:id="taulerGrid" maxHeight="400.0" maxWidth="400.0" prefHeight="300.0" prefWidth="300.0" style="-fx-border-width: 2px; -fx-border-color: black;" BorderPane.alignment="CENTER">
