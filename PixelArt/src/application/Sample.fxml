<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" scaleShape="false" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DificultadController">
   <children>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
         <center>
            <GridPane fx:id="taulerGrid" prefHeight="361.0" prefWidth="299.0" style="-fx-border-width: 2px; -fx-border-color: black;" BorderPane.alignment="CENTER">
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor></GridPane>
         </center>
         <left>
            <HBox prefHeight="202.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <AnchorPane prefWidth="100.0" BorderPane.alignment="CENTER" />
         </right>
         <bottom>
            <AnchorPane prefHeight="50.0" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="tornar" layoutX="218.0" layoutY="63.0" mnemonicParsing="false" text="tornar" />
               </children></AnchorPane>
         </bottom>
         <top>
            <HBox prefHeight="100.0" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <ButtonBar fx:id="barraBotons" buttonMinWidth="50.0" nodeOrientation="LEFT_TO_RIGHT">
                    <buttons>
                      <Button fx:id="netejar" mnemonicParsing="false" onAction="#netejarLlenç" text="Netejar" />
                        <ColorPicker fx:id="color" editable="true" onAction="#establirColor">
                           <value>
                              <Color />
                           </value>
                        </ColorPicker>
                        <Button fx:id="pinzell" mnemonicParsing="false" onAction="#pintarLlenç" text="Pinzell" />
                        <Button fx:id="esborrar" mnemonicParsing="false" onAction="#esborrarLlenç" text="Esborrar" />
                        <Button fx:id="guardar" mnemonicParsing="false" onAction="#guardar" text="Guardar" />
                    </buttons>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </ButtonBar>
               </children>
            </HBox>
         </top>
      </BorderPane>
   </children>
</VBox>
